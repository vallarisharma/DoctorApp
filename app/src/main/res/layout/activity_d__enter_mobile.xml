<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".D_EnterMobile"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar1"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/white"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
               <Button
                   android:id="@+id/btn_logout"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_alignParentRight="true"
                   android:background="@drawable/logouticon"
                   />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lil_number"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the Mobile No.of patient here:"
                android:textSize="20sp"
                android:textColor="@color/black"
               />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lil_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <EditText
                android:id="@+id/et_phoneno"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="+91**********"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:inputType="phone"
                />
            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Search"
                android:background="@drawable/ripple_rectangle"
                android:id="@+id/btn_search"
                android:textSize="15sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/btn_searchByName"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="15sp"

                android:layout_width="match_parent"

                android:text="Search By Name or Date"
                android:background="@drawable/ripple_rectangle"
                android:layout_gravity="bottom" />
        </LinearLayout>
    </RelativeLayout>


    </LinearLayout>

